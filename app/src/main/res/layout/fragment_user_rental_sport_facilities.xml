<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".Options.UserRentalSportFacilitiesFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_userRentalFacilities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        tools:listitem="@layout/rental_facility_view_row" />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="-60dp"
        app:cardBackgroundColor="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_outline_dark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/rfv_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_addfac"
                android:backgroundTint="@color/button_state_color" />

            <Button
                android:id="@+id/rfv_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/button_state_color" />

            <Button
                android:id="@+id/rfv_delete"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_remove"
                android:backgroundTint="@color/button_state_color" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>