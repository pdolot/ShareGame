<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_marginTop="220sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logowanie"
            android:textColor="@color/iconTextColor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/errorMess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nie prawidłowy email lub hasło"
            android:textAlignment="center"
            android:textColor="@color/magentalv2"
            android:textSize="14dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/loginUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonsearch"
            android:fontFamily="sans-serif-light"
            android:hint="Nazwa użytkownika"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:paddingLeft="20dp"
            android:textColor="#494949"
            android:textColorHint="#494949"
            android:textStyle="italic"
            android:theme="@style/Autocomplete" />


        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/loginUserPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:background="@drawable/buttonsearch"
            android:fontFamily="sans-serif-light"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:maxLength="30"
            android:textColor="#494949"
            android:textColorHint="#494949"
            android:textStyle="italic"
            android:theme="@style/Autocomplete"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_outline"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Zaloguj"
                    android:textColor="@color/iconTextColor"
                    android:textSize="20dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Nie pamiętasz hasła?"
            android:textAlignment="center"
            android:textColor="@color/iconTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/login_rememberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:text="Przypomnij hasło!"
            android:textAlignment="center"
            android:textColor="@color/turquioselv2"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Nie masz jeszcze konta?"
            android:textAlignment="center"
            android:textColor="@color/iconTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/login_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:text="Zarejestruj się!"
            android:textAlignment="center"
            android:textColor="@color/turquioselv2"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>