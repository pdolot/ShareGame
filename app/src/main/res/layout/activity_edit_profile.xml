<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".Options.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bartop"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edytuj profil"
            android:textColor="@color/iconTextColor"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/ic_lowpoly"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit_edit"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_edit"
                android:backgroundTint="@color/button_state_color"
                android:visibility="invisible" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/useravatar"
                app:civ_border_color="#d2d2d2"
                app:civ_border_width="1dp" />

            <Button
                android:id="@+id/edit_delete"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/ic_remove"
                android:backgroundTint="@color/button_state_color"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:scrollbars="none"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa użytkownika"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Imie"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Nazwisko"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Email"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Hasło"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fieldMarginTop"
            android:text="PayPal email"
            android:textColor="@color/iconColor"
            android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_paypalmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Numer telefonu"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/user_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Data urodzenia"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/userBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#00000000">

                <LinearLayout
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/item_outline">

                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/iconTextColor"
                        android:text="Zapisz zmiany"
                        android:textSize="20dp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>