<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start|center"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="start|center"
            android:text="PoniedziaÅ‚ek"
            android:textColor="@color/iconTextColor"
            android:textSize="@dimen/fieldText" />

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/day_timestart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="34dp"
            android:drawableRight="@drawable/ic_arrowright"
            android:drawableTint="@color/iconTextColor"
            android:gravity="end|center"
            android:text="00:00"
            android:textColor="@color/iconTextColor"
            android:textSize="@dimen/fieldText" />

    </LinearLayout>

    <TextView
        android:id="@+id/day_timeend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrowright"
        android:drawableTint="@color/iconTextColor"
        android:gravity="end|center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="24:00"
        android:textColor="@color/iconTextColor"
        android:textSize="@dimen/fieldText" />

    <TextView
        android:id="@+id/day_divide"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/divide" />

</LinearLayout>