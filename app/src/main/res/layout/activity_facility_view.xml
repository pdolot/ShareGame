<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".FacilityView">

    <android.support.v4.view.ViewPager
        android:id="@+id/facilityImagePager"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/iconColor"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#32000000">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/call"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/ic_phone"
                android:backgroundTint="@color/iconColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zadzwoń"
                android:textColor="@color/iconTextColor"
                android:textSize="9dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <Button
                android:id="@+id/writemess"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_message"
                android:backgroundTint="@color/iconColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Napisz"
                android:textColor="@color/iconTextColor"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/makereservation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_reservation"
                android:backgroundTint="@color/iconColor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rezerwuj"
                android:textColor="@color/iconTextColor"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/show_in_map"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_location2"
                android:backgroundTint="@color/iconColor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:textColor="@color/iconTextColor"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/website"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/ic_web"
                android:backgroundTint="@color/iconColor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WWW"
                android:textColor="@color/iconTextColor"
                android:textSize="9dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divide" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa obiektu"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Klub Sportowy Społem"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Adres"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Ignacego Skorupki 21, 90-001 Łódź"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Godziny otwarcia"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/facility_open_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText"
                    android:layout_marginTop="@dimen/textMarginTop"
                    android:lineSpacingExtra="7dp"/>

                <TextView
                    android:id="@+id/facility_open_hours_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText"
                    android:layout_marginTop="@dimen/textMarginTop"
                    android:textAlignment="viewEnd"
                    android:lineSpacingExtra="7dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:id="@+id/expand_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:drawableRight="@drawable/ic_arrowdown"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:text="Terminarz"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/schedule_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/data_swipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/prev_date"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/ic_arrowleft"
                            android:backgroundTint="@color/iconTextColor" />

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="226dp"
                            android:layout_height="38dp"
                            android:gravity="center"
                            android:text="15/11/2018"
                            android:textColor="@color/iconTextColor"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/next_date"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/ic_arrowright"
                            android:backgroundTint="@color/iconTextColor" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fv_day_of_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/iconTextColor"
                        android:textSize="15dp" />

                    <HorizontalScrollView
                        android:id="@+id/hsv_schedule"
                        android:layout_below="@id/data_swipper"
                        android:layout_marginTop="@dimen/fieldMarginTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/dayStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/textMarginTop"
                        android:textColor="@color/sf_close"
                        android:textSize="@dimen/fieldText"
                        android:textAlignment="center"
                        android:text=""
                        />
                    <LinearLayout
                        android:layout_marginTop="@dimen/fieldMarginTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="35sp"
                            android:layout_height="15sp"
                            android:background="@color/turquiose"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15sp"
                            android:textColor="@color/iconTextColor"
                            android:text="  -   termin zajęty     "
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="35sp"
                            android:layout_height="15sp"
                            android:background="@color/turquioselv2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15sp"
                            android:textColor="@color/iconTextColor"
                            android:text="  -   termin zarezerwowany"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="#00000000"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/b_makeReservation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/item_outline"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:clickable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:text="Rezerwuj"
                                android:textColor="@color/iconTextColor"
                                android:textSize="@dimen/fieldText" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Cena za godzinę"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_rental_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="100 zł"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Dostępne dyscypliny sportowe"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="futsal, piłka nożna"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Wyposażenie"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="parking, prysznice, piłki, szatnia"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Numer telefonu"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="456 324 130"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Adres email"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="klubsportowyspolem@gmail.com"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Strona www"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/facility_www"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="www.klubsportowyspolem.pl"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText"
                android:layout_marginTop="@dimen/textMarginTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Ocena"
                android:textColor="@color/iconColor"
                android:textSize="@dimen/fieldNameText" />

            <RelativeLayout
                android:layout_marginTop="@dimen/textMarginTop"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/fv_ratingBar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.7"
                    android:translationX="-26dp"
                    android:scaleY="0.7"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/fv__ratingsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="(201)"
                    android:textAlignment="center"
                    android:textColor="@color/iconTextColor"
                    android:textSize="16dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>