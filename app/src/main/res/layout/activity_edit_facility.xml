<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".EditFacility">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bartop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edytuj obiekt sportowy"
            android:textColor="@color/iconTextColor"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/editScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ef_facility_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="Nazwa obiektu *"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <EditText
                android:id="@+id/ef_facility_address_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="Miasto *"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ef_facility_address_street"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/buttonsearch"
                    android:fontFamily="sans-serif-light"
                    android:hint="Ulica *"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/fieldText"
                    android:theme="@style/Autocomplete" />

                <EditText
                    android:id="@+id/ef_facility_address_streetNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/buttonsearch"
                    android:fontFamily="sans-serif-light"
                    android:hint="Nr *"
                    android:inputType="textPersonName"
                    android:maxLength="5"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/fieldText"
                    android:theme="@style/Autocomplete" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ef_facility_address_zip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/buttonsearch"
                    android:fontFamily="sans-serif-light"
                    android:hint="--"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="center"
                    android:textSize="@dimen/fieldText"
                    android:theme="@style/Autocomplete" />

                <EditText
                    android:id="@+id/ef_facility_address_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.47"
                    android:background="@drawable/buttonsearch"
                    android:fontFamily="sans-serif-light"
                    android:hint="---"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textSize="@dimen/fieldText"
                    android:theme="@style/Autocomplete" />

                <EditText
                    android:id="@+id/ef_facility_address_zccity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/buttonsearch"
                    android:fontFamily="sans-serif-light"
                    android:hint="Miasto *"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/fieldText"
                    android:theme="@style/Autocomplete" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:id="@+id/ef_check_in_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_location2"
                android:drawableTint="@color/iconTextColor"
                android:onClick="ShowPopup"
                android:paddingLeft="10dp"
                android:text="Zaznacz na mapie"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <EditText
                android:id="@+id/ef_facility_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="Adres email"
                android:inputType="textEmailAddress"
                android:maxLength="36"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <EditText
                android:id="@+id/ef_facility_email_paypal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="PayPal email *"
                android:inputType="textEmailAddress"
                android:maxLength="36"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <EditText
                android:id="@+id/ef_facility_phone_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="Numer telefonu"
                android:maxLength="15"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <EditText
                android:id="@+id/ef_facility_www"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/buttonsearch"
                android:fontFamily="sans-serif-light"
                android:hint="Strona www"
                android:inputType="textUri"
                android:maxLength="36"
                android:paddingLeft="20dp"
                android:textSize="@dimen/fieldText"
                android:theme="@style/Autocomplete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ef_timepickerstart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="start|center"
                    android:text="Godzina otwarcia:"
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText" />

                <TextView
                    android:id="@+id/ef_facility_start_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:drawableRight="@drawable/ic_arrowright"
                    android:drawableTint="@color/iconTextColor"
                    android:gravity="end|center"
                    android:text="00:00"
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ef_timepickerend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="start|center"
                    android:text="Godzina zamknięcia:"
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText" />

                <TextView
                    android:id="@+id/ef_facility_end_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:drawableRight="@drawable/ic_arrowright"
                    android:drawableTint="@color/iconTextColor"
                    android:gravity="end|center"
                    android:text="00:00"
                    android:textColor="@color/iconTextColor"
                    android:textSize="@dimen/fieldText" />

            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:text="Cena za godzinę:"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <SeekBar
                android:id="@+id/ef_facility_seekbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:max="200"
                android:maxHeight="8dp"
                android:progressBackgroundTint="#999999"
                android:progressDrawable="@drawable/seek_bar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/ef_facility_rental_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 zł/h"
                android:textAlignment="center"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <CheckBox
                    android:id="@+id/ef_isOpenHolidays"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:buttonTint="@color/turquioselv2"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Obiekt czynny w święta"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/fieldText" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:paddingLeft="10dp"
                android:text="Godziny otwarcia"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ef_DayOpenHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:id="@+id/expand_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:paddingLeft="10dp"
                android:text="W co można grać?"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/edit_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/rectangle" />

            <TextView
                android:id="@+id/edit_sportCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:drawableRight="@drawable/ic_addfac"
                android:drawableTint="@color/iconTextColor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Zaproponuj inną kategorię sportową"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:paddingLeft="10dp"
                android:text="Co obiekt oferuje?"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/edit_extrasRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/rectangle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:paddingLeft="10dp"
                android:text="Zdjęcia"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_edit_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="#00000000"
                app:cardElevation="5dp">

                <LinearLayout

                    android:id="@+id/edit_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_outline"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:fontFamily="sans-serif-light"
                        android:text="Edytuj"
                        android:textColor="@color/iconTextColor"
                        android:textSize="20dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>