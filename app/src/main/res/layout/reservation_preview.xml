<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="160dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/close_dialog"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_remove"
                android:backgroundTint="@color/iconTextColor"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa obiektu"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/res_prev_facilityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Nazwa obiektu"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textMarginTop"
                android:text="Adres obiektu"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/res_prev_facilityAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Adres"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textMarginTop"
                android:text="Data rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/res_prev_ddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Data rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textMarginTop"
                android:text="Godziny rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/res_prev_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Data rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fieldMarginTop"
                android:background="@drawable/divide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textMarginTop"
                android:text="Cena rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldNameText" />

            <TextView
                android:id="@+id/res_prev_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Data rezerwacji"
                android:textColor="@color/iconTextColor"
                android:textSize="@dimen/fieldText" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/res_view_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#049c34"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Zapłać"
                android:textColor="@color/iconTextColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="0.8"
                android:background="@drawable/ic_payment"
                android:backgroundTint="@color/iconTextColor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/res_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#049c34"
            android:clickable="false"
            android:visibility="gone">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Zapłacone"
                android:textColor="@color/iconTextColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="0.8"
                android:background="@drawable/ic_done"
                android:backgroundTint="@color/iconTextColor" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>