<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:gravity="center"
    app:cardBackgroundColor="#00000000"
    app:cardElevation="3dp">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/user_history_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_outline_dark"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uh_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/id1img1"
                app:civ_border_color="#d2d2d2"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uh_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:text="MOSiR Łódź"
                    android:textColor="@color/iconTextColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uh_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:text="Ignacego Skorupki 21, Łódź"
                    android:textColor="@color/iconColor"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.75"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uh_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:text="25/11/2018"
                    android:textColor="@color/iconTextColor"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uh_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:text="16:00-17:30"
                    android:textColor="@color/iconColor"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@color/magentalv2">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_money"
                    android:backgroundTint="@color/iconTextColor"/>

                <TextView
                    android:id="@+id/uh_rentalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 zł"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/iconTextColor"
                    />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</android.support.v7.widget.CardView>