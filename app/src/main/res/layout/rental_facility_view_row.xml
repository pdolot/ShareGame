<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardBackgroundColor="#00000000"
    android:layout_margin="3dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/item_outline_dark"
        android:id="@+id/rental_facility_view_layout"
        android:padding="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rfv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/id1img1"
            app:civ_border_color="#d2d2d2"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/rfv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="MOSiR Łódź"
                android:textColor="@color/iconTextColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rfv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Ignacego Skorupki 21, Łódź"
                android:textColor="@color/iconColor"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/rfv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="25/11/2018"
                android:textColor="@color/iconTextColor"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rfv_hours"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="16:00-17:30"
                android:textColor="@color/iconColor"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>