<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <gradient android:startColor="#0a000000"
            android:endColor="#d2000000"
            android:angle="270" />
            <corners android:radius="7dp"/>

        </shape>
    </item>

    <!-- Top color -->
    <item android:top="3px">
        <shape  android:shape="rectangle">
            <solid android:color="@color/barBorderColor" />
        </shape>
    </item>

    <item android:top="5px">
        <shape  android:shape="rectangle">
            <solid android:color="@color/barColor" />
        </shape>
    </item>



</layer-list>